<?xml version='1.0' encoding='utf-8'?>
<widget id="org.cordova.quasar.app" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>모두의 레시피</name>
    <description>간편한 레시피 모음</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="icon/ldpi.png" />
        <icon density="mdpi" src="icon/mdpi.png" />
        <icon density="hdpi" src="icon/hdpi.png" />
        <icon density="xhdpi" src="icon/xhdpi.png" />
        <icon density="xxhdpi" src="icon/xxhdpi.png" />
        <icon density="xxxhdpi" src="icon/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="about:*" />
</widget>
